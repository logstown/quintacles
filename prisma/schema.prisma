generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String     @id @unique
  username    String     @unique
  displayName String?
  photoURL    String?
  createdAt   DateTime   @default(now())
  userLists   UserList[]
}

enum MediaType {
  Movie
  TvShow
  TvEpisode
  Person
}

model UserList {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  lastUserAddedAt DateTime @default(now())

  users User[]

  orderedItemIdsString String

  items ListItem[]

  Restrictions   Restrictions @relation(fields: [restrictionsId], references: [id])
  restrictionsId Int

  @@unique(name: "uniqueList", [orderedItemIdsString, restrictionsId])
}

model Restrictions {
  id               Int       @id @default(autoincrement())
  mediaType        MediaType
  genreId          Int
  decade           Int
  isLiveActionOnly Boolean

  userLists UserList[]
  Person    Person     @relation(fields: [personId], references: [id])
  personId  Int

  EpisodesTvShow   ListItem @relation(fields: [episodesTvShowId], references: [id])
  episodesTvShowId String

  @@unique(fields: [mediaType, decade, isLiveActionOnly, genreId, personId, episodesTvShowId], name: "uniqueRestrictions")
}

model ListItem {
  id String @id @unique

  mediaType    MediaType
  name         String
  date         String
  posterPath   String?
  genreIds     Int[]
  overview     String?
  backdropPath String?
  seasonNum    Int?
  episodeNum   Int?

  userLists     UserList[]
  restrictionss Restrictions[]
}

model Person {
  id          Int     @id @unique
  name        String
  profilePath String?

  movieTvRestrictions Restrictions[]
}
